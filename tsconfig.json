{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "babelCore": "@babel/core",
        "useBabel": true,
        "useCache": true,
        "forceIsolatedModules": true,
        "reportFiles": ["src/**/*.{ts,tsx}"]
    }
}
